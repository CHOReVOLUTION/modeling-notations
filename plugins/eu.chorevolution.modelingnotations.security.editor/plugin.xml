<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <!-- @generated security -->
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="eu.chorevolution.modelingnotations.security.presentation.SecurityModelWizardID"
            name="%_UI_SecurityModelWizard_label"
            class="eu.chorevolution.modelingnotations.security.presentation.SecurityModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/SecurityModelFile.gif">
         <description>%_UI_SecurityModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <!-- @generated security -->
      <editor
            id="eu.chorevolution.modelingnotations.security.presentation.SecurityEditorID"
            name="%_UI_SecurityEditor_label"
            icon="icons/full/obj16/SecurityModelFile.gif"
            extensions="security"
            class="eu.chorevolution.modelingnotations.security.presentation.SecurityEditor"
            contributorClass="eu.chorevolution.modelingnotations.security.presentation.SecurityActionBarContributor">
      </editor>
   </extension>
</plugin>
