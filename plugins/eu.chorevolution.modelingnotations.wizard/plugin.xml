<plugin>

   <extension point="org.eclipse.ui.newWizards">
      
      <category
            id="eu.chorevolution.studio.eclipse.wizard.category"
            name="%wizards.category"/>
            
      <!-- adapter Wizard -->     
      <wizard
            id="eu.chorevolution.modelingnotations.wizard.AdapterModel"
            name="%_UI_AdapterModelWizard_label"
            class="eu.chorevolution.modelingnotations.wizard.custom.AdapterModelWizard"
            category="eu.chorevolution.studio.eclipse.wizard.category"
            icon="icons/full/obj16/AdapterModelFile.gif">
         <description>%_UI_AdapterModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
            
      <!-- chorarch Wizard -->     
      <wizard
            id="eu.chorevolution.modelingnotations.wizard.ChorarchModel"
            name="%_UI_ChorarchModelWizard_label"
            class="eu.chorevolution.modelingnotations.wizard.custom.ChorarchModelWizard"
            category="eu.chorevolution.studio.eclipse.wizard.category"
            icon="icons/full/obj16/ChorarchModelFile.gif">
         <description>%_UI_ChorarchModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
      
       <!-- gidl Wizard -->     
       <wizard
            id="eu.chorevolution.modelingnotations.wizard.GidlModelWizard"
            name="%_UI_GidlModelWizard_label"
            class="eu.chorevolution.modelingnotations.wizard.custom.GidlModelWizard"
            category="eu.chorevolution.studio.eclipse.wizard.category"
            icon="icons/full/obj16/GidlModelFile.gif">
         <description>%_UI_GidlModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
            
      <!-- security Wizard -->  
      <wizard
            id="eu.chorevolution.modelingnotations.wizard.SecurityModelWizard"
            name="%_UI_SecurityModelWizard_label"
            class="eu.chorevolution.modelingnotations.wizard.custom.SecurityModelWizard"
            category="eu.chorevolution.studio.eclipse.wizard.category"
            icon="icons/full/obj16/SecurityModelFile.gif">
         <description>%_UI_SecurityModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   
   </extension>
   
 </plugin>
